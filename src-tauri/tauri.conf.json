{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "UML Editor",
  "version": "0.3.0",
  "identifier": "com.uml-editor.editor",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "UML Editor",
        "width": 1300,
        "height": 700
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "publisher": "CN=mewisme",
    "copyright": "Copyright Â© 2025 Mew",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "provider-public-key-here",
      "endpoints": [
        "https://github.com/mewisme/uml/releases/latest/download/latest.json"
      ]
    }
  }
}
